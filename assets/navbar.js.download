(function() {
    $(function() {
        //toggle collapsed layout
        $(document).on('click', '.toggle-layout', function(e) {
            e.preventDefault();
            $('body').trigger('toggle:collapsed');
            return false;
        });
        //toggle fullscreen
        $(document).on('click', '.toggle-fullscreen', function(e) {
            e.preventDefault();
            $('body').trigger('toggle:fullscreen');
            return false;
        });
        //toggle right sidebar
        $(document).on('click', '.toggle-right-sidebar', function(e) {
            e.preventDefault();
            $('body').trigger('toggle:right-sidebar');
            return false;
        });
    });
})();
